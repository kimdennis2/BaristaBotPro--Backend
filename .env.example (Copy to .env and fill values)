# ==========================================
# BARISTABOT PRO - ENVIRONMENT CONFIG
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=https://denniskathurima.github.io/baristabot-pro

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/baristabot
REDIS_URL=redis://localhost:6379

# M-Pesa Daraja API (Safaricom)
# Get these from: https://developer.safaricom.co.ke
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_PASSKEY=your_passkey_here
MPESA_SHORTCODE=174379
MPESA_CALLBACK_URL=https://your-backend-url.com/api/mpesa/callback

# Business till number (for B2C payments to baristas)
MPESA_BUSINESS_SHORTCODE=your_actual_till_number

# Web3 Configuration
ETHEREUM_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ETHEREUM_CHAIN_ID=137
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_CHAIN_ID=mainnet-beta

# Your coffee shop wallet addresses
COFFEE_SHOP_ETH_ADDRESS=0xYourEthereumWalletAddress
COFFEE_SHOP_SOL_ADDRESS=YourSolanaWalletAddress

# Security
JWT_SECRET=generate_random_string_at_least_32_chars
ENCRYPTION_KEY=another_random_string_for_data_encryption
API_KEY=your_internal_api_key_for_pos_systems

# Optional: Third-party services
SENTRY_DSN=your_sentry_url_for_error_tracking
STRIPE_SECRET_KEY=sk_test_... (for international cards)
